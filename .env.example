# Video Summarization Engine Configuration
# Copy this file to .env and set your preferences

# Disable automatic model downloads on startup
DISABLE_AUTO_DOWNLOADS=false

# Disable automatic database initialization/updates
DISABLE_DATABASE_INIT=false

# Enable offline mode (no network operations)
OFFLINE_MODE=false

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
MAX_GPU_MEMORY_GB=10

# Whisper Model Preference
WHISPER_MODEL=base

# Processing Configuration
DEFAULT_BATCH_SIZE=2
MAX_BATCH_SIZE=5

# Development Mode
DEBUG=false